{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noEmit": true,
    "noEmitOnError": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "esc/tests/*": [
        "tests/*"
      ],
      "esc/*": [
        "app/*"
      ],
      "*": [
        "types/*"
      ]
    },
    "pretty": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "es2017"
  },
  "include": [
    "app/**/*",
    "tests/**/*",
    "types/**/*"
  ]
}
